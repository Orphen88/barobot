<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ToggleButton
            android:id="@+id/graph_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/graph_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Random"
            android:textOn="Random" />

        <Button
            android:id="@+id/graph_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source" />

        <Button
            android:id="@+id/graph_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed" />

        <Button
            android:id="@+id/graph_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat" />

        <Button
            android:id="@+id/graph_xsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X size" />

        <Button
            android:id="@+id/graph_fps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPS" />

        <ToggleButton
            android:id="@+id/graph_reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Reverse"
            android:textOn="Reverse" />

        <ToggleButton
            android:id="@+id/graph_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Auto Scale"
            android:textOn="Auto Scale" />

        <ToggleButton
            android:id="@+id/graph_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Points"
            android:textOn="Points" />

        <ToggleButton
            android:id="@+id/graph_lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Lines"
            android:textOn="Lines" />

        <ToggleButton
            android:id="@+id/graph_columns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Columns"
            android:textOn="Columns" />

        <ToggleButton
            android:id="@+id/graph_high_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="High Speed"
            android:textOn="High Speed" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/webViewPlaceholder2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.65" >
    </FrameLayout>

</LinearLayout>