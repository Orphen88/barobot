<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/MenuButtonStartColor" android:startColor="@color/MenuButtonEndColor" />
            <stroke android:width="1dp" android:color="@color/MenuButtonBorderColor" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/MenuButtonEndColor" android:startColor="@color/MenuButtonStartColor" />

            <stroke android:width="1dp" android:color="@color/MenuButtonBorderColor" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="270" android:endColor="@color/MenuButtonDisabledEndColor" android:startColor="@color/MenuButtonDisabledStartColor" />

            <stroke android:width="1dp" android:color="@color/MenuButtonBorderColor" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape></item>
    <item>
        <shape>
            <gradient android:angle="315" android:endColor="@color/MenuButtonEndColor" android:startColor="@color/MenuButtonStartColor" />

            <stroke android:width="1dp" android:color="@color/MenuButtonBorderColor" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape>
       </item>

</selector>