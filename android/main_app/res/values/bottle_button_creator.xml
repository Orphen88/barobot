<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BottleButtonCreator" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/bottle</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/bottle_box_text_color</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>
</resources>
