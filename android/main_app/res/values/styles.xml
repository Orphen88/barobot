<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:components="http://schemas.android.com/apk/res/com.barobot">

    <style name="ProgressBarLayout" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_margin">5dp</item>
        <item name="textColor">@android:color/white</item>
        <item name="shadowRadius">1dp</item>
        <item name="shadowDx">1dp</item>
        <item name="shadowDy">1dp</item>
        <item name="shadowColor">@android:color/black</item>
    </style>

    <!-- Buttons -->

    <style name="ButtonDefault" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="ButtonBlue" parent="ButtonDefault">
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="ButtonGreen" parent="ButtonDefault">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ButtonRed" parent="ButtonDefault">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="ButtonYellow" parent="ButtonDefault">
        <item name="android:background">@drawable/button_yellow</item>
    </style>
    
    <!-- Misc -->
    <style name="ShadowedText" parent="@android:style/TextAppearance.Medium">
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

</resources>