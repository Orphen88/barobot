<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </RelativeLayout>

    <Button
        android:id="@+id/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="Change main color" />

    <Button
        android:id="@+id/top_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Chnage top color" />

    <Button
        android:id="@+id/bottom_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_color"
        android:layout_centerHorizontal="true"
        android:text="Change bottom color" />

    <Switch
        android:id="@+id/light_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Light show for your music"
        android:textSize="16dp" />

    <Switch
        android:id="@+id/all_lights_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/light_show"
        android:layout_alignRight="@+id/light_show"
        android:layout_below="@+id/light_show"
        android:text="Turn ON all lights"
        android:textSize="16dp" />

</RelativeLayout>