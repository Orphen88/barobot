			        android:textOff="3 OFF"
			        android:textOn="3 ON" />

			    <ToggleButton
			        android:id="@+id/led4"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBaseline="@+id/led1"
			        android:layout_toRightOf="@+id/led3"
			        android:textOff="4 OFF"
			        android:textOn="4 ON" />

			    <ToggleButton
			        android:id="@+id/led5"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBaseline="@+id/led1"
			        android:layout_toRightOf="@+id/led4"
			        android:textOff="5 OFF"
			        android:textOn="5 ON" />

			    <ToggleButton
			        android:id="@+id/led6"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBaseline="@+id/led1"
			        android:layout_toRightOf="@+id/led5"
			        android:textOff="6 OFF"
			        android:textOn="6 ON" />

			    <ToggleButton
			        android:id="@+id/led7"
			        android:layout_width="wrap_content"
