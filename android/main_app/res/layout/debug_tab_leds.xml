			        android:layout_alignBaseline="@+id/led1"
			        android:layout_toRightOf="@+id/led8"
			        android:textOff="9 OFF"
			        android:textOn="9 ON" />

			    <ToggleButton
			        android:id="@+id/led10"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBaseline="@+id/led1"
			        android:layout_toRightOf="@+id/led9"
			        android:textOff="10 OFF"
			        android:textOn="10 ON" />
    
</RelativeLayout>