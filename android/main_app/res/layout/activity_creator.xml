<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:orientation="horizontal"
    tools:context=".CreatorActivity" >
    
    <RelativeLayout
        android:id="@+id/page_layout"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="3" >

        <LinearLayout
            android:id="@+id/top_bottle_shelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bottle_button1"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button3"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button5"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button7"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button9"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button11"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_bottle_shelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_bottle_shelf"
            android:orientation="horizontal"
            android:paddingLeft="25dp" >

            <TextView
                android:id="@+id/bottle_button2"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button4"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button6"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button8"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button10"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />

            <TextView
                android:id="@+id/bottle_button12"
                style="@style/BottleButtonCreator"
                android:onClick="onBottleClicked" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/bottom_bottle_shelf"
            android:orientation="horizontal" >
            <ListView
                android:id="@+id/ingredient_list"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:layout_margin="5sp"
                android:divider="@null"
                android:dividerHeight="0sp"
                android:background="@drawable/ingredient_list_background">
                
            </ListView>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0sp"
                    android:layout_weight="2"
                    style="@style/ButtonGreen"
                    android:onClick="onPourRecipeButtonClicked"
                    android:text="@string/create_pour_button" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    style="@style/ButtonYellow"
                    android:enabled="false"
                    android:text="@string/create_undo_button" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0sp"
                    android:layout_weight="2"
                    style="@style/ButtonBlue"
                    android:onClick="onAddRecipeButtonClicked"
                    android:text="@string/create_add_button" />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    style="@style/ButtonRed"
                    android:onClick="onClearButtonClicked"
                    android:text="@string/create_clear_button" />
        	</LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
    	
    	<Button 
        	android:id="@+id/menu_favorite"
        	android:layout_alignParentTop="true"
        	android:layout_margin="2dp"
        	style="@style/MenuButton"
        	android:onClick="onMenuButtonClicked"
        	android:text="@string/menu_favorite"/>
    	
    	<Button
    	    android:id="@+id/menu_choose"
    	    android:layout_below="@id/menu_favorite"
    	    android:layout_margin="2dp"
    	    style="@style/MenuButton"
    	    android:onClick="onMenuButtonClicked"
    	    android:text="@string/menu_choose"
    	    />
    	
    	<Button
        	android:id="@+id/menu_lucky"
        	android:layout_below="@id/menu_choose"
        	android:layout_margin="2dp"
        	style="@style/MenuButton"
        	android:onClick="onMenuButtonClicked"
        	android:text="@string/menu_lucky"/>
    	
    	<Button
        	android:id="@+id/menu_create"
        	android:layout_below="@id/menu_lucky"
        	android:layout_margin="2dp"
        	style="@style/MenuButton"
        	android:onClick="onMenuButtonClicked"
        	android:text="@string/menu_create"/>
    	
    	<Button
        	android:id="@+id/menu_bottles"
        	android:layout_below="@id/menu_create"
        	    	android:layout_margin="2dp"
        	style="@style/MenuButton"
        	android:onClick="onMenuButtonClicked"
        	android:text="@string/menu_bottles"/>
    	
    	<Button
        	android:id="@+id/menu_options"
        	android:layout_alignParentBottom="true"
        	android:layout_margin="2dp"
        	style="@style/MenuButton"
        	android:onClick="onMenuButtonClicked"
        	android:text="@string/menu_options"/>
    	
    </RelativeLayout>
  	
</LinearLayout>
