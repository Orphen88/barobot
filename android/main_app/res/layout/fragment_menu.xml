<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Button
        android:id="@+id/menu_favorite"
        style="@style/MenuButton"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:onClick="onMenuButtonClicked"
        android:enabled="false"
        android:drawableLeft="@drawable/favorite_55"
        android:text="@string/menu_favorite" />

    <Button
        android:id="@+id/menu_choose"
        style="@style/MenuButton"
        android:layout_below="@id/menu_favorite"
        android:layout_margin="2dp"
        android:onClick="onMenuButtonClicked"
        android:drawableLeft="@drawable/choose_55"
        android:text="@string/menu_choose" />

    <Button
        android:id="@+id/menu_lucky"
        style="@style/MenuButton"
        android:layout_below="@id/menu_choose"
        android:layout_margin="2dp"
        android:onClick="onMenuButtonClicked"
        android:enabled="false"
        android:drawableLeft="@drawable/lucky_55"
        android:text="@string/menu_lucky" />

    <Button
        android:id="@+id/menu_create"
        style="@style/MenuButton"
        android:layout_below="@id/menu_lucky"
        android:layout_margin="2dp"
        android:onClick="onMenuButtonClicked"
        android:drawableLeft="@drawable/create_55"
        android:text="@string/menu_create" />
    
    <Button
        android:id="@+id/menu_history"
        style="@style/MenuButton"
        android:layout_below="@id/menu_create"
        android:layout_margin="2dp"
        android:onClick="onMenuButtonClicked"
        android:drawableLeft="@drawable/history_55"
        android:enabled="false"
        android:text="@string/menu_history" />
    
    <Button
        android:id="@+id/menu_mobile"
        style="@style/MenuButton"
        android:layout_below="@id/menu_history"
        android:layout_margin="2dp"
        android:onClick="onMenuButtonClicked"
        android:drawableLeft="@drawable/mobile_55"
        android:enabled="false"
        android:text="@string/menu_mobile" />

    <Button
        android:id="@+id/menu_bottles"
        style="@style/MenuButton"
        android:layout_below="@id/menu_mobile"
        android:layout_margin="2dp"
        android:onClick="onMenuButtonClicked"
        android:text="@string/menu_bottles" />

    <Button
        android:id="@+id/menu_options"
        style="@style/MenuButton"
        android:layout_below="@id/menu_bottles"
        android:layout_margin="2dp"
        android:onClick="onMenuButtonClicked"
        android:drawableLeft="@drawable/options_55"
        android:text="@string/menu_options" />

</RelativeLayout>