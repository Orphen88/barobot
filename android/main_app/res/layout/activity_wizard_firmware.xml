<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:text="@string/wizard_firmware_info"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/wizard_firmware_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:onClick="onOptionsButtonClicked"
        android:text="@string/wizard_firmware_check_button_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wizard_firmware_check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="@string/wizard_firmware_manual_options_info"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/wizard_firmware_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:onClick="onOptionsButtonClicked"
        android:text="@string/wizard_firmware_check_upload_button_text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/wizard_firmware_upload_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wizard_firmware_upload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="onOptionsButtonClicked"
        android:text="@string/wizard_firmware_check_manual_button_text"
        android:textSize="12sp" />
 <LinearLayout
        android:id="@+id/wizard_firmware_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000" >

        <Button
            android:id="@+id/wizard_firmware_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onOptionsButtonClicked"
   		    android:text="@string/wizard_previous"
            android:textSize="40sp" />

        <Button
            android:id="@+id/wizard_firmware_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wizard_main_menu"
            android:onClick="onOptionsButtonClicked"
            android:textSize="40sp" />
        
        <Button
            android:id="@+id/wizard_firmware_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.10"
            android:text="@string/wizard_next"
            android:onClick="onOptionsButtonClicked"
            android:textSize="40sp" />
    </LinearLayout>
    
</RelativeLayout>
