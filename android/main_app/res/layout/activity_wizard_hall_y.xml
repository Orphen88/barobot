<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    
	<LinearLayout
        android:id="@+id/wizard_hally_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:dividerPadding="15dp" >

        <Button
            android:id="@+id/wizard_hally_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onOptionsButtonClicked"
            android:text="@string/wizard_previous"
            android:textSize="40sp" />
        <Button
            android:id="@+id/wizard_hally_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wizard_main_menu"
            android:onClick="onOptionsButtonClicked"
            android:textSize="40sp" />

        <Button
            android:id="@+id/wizard_hally_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.10"
            android:text="@string/wizard_next"
            android:onClick="onOptionsButtonClicked"
            android:textSize="40sp" />
    </LinearLayout>

	<Button
	    android:id="@+id/wizard_hally_start"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="50dp"
	    android:onClick="onOptionsButtonClicked"
	    android:padding="20dp"
	    android:text="@string/wizard_hally_start_test" />

	<TextView
	    android:id="@+id/wizard_hally_results"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/wizard_hally_start"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="34dp"
	    android:textAppearance="?android:attr/textAppearanceLarge" />
    

</RelativeLayout>
