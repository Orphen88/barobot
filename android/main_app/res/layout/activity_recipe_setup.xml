<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecipeSetupActivity" >

    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        
        <LinearLayout
            android:id="@+id/recipe_layout_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true" >
            
        
        	<Spinner
            android:id="@+id/recipe_spinner"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="4" 
            />
        	
        	<Button
        	    android:id="@+id/recipe_button_new"
        	    android:layout_width="0sp"
        	    android:layout_height="fill_parent"
        	    android:layout_weight="2"
        	    android:onClick="onAddRecipeButtonClicked"
        	    android:text="[New recipe]" />

        </LinearLayout>
        
               
        <ListView
            android:id="@+id/recipe_ingridient_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@id/recipe_layout_name"/>
        
        
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <Button
            android:id="@+id/recipe_type_new_button"
            android:layout_marginBottom="@dimen/recipe_button_margin_bottom"
            android:layout_width="@dimen/recipe_list_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:onClick="onAddNewTypeButtonClick"
            android:text="@string/recipe_add_new_button" />

        <ListView
            android:id="@+id/recipe_types_list"
            android:layout_width="@dimen/recipe_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_type_new_button"
            android:layout_alignParentRight="true" />

        <Button
            android:id="@+id/recipe_liquid_new_button"
            android:layout_marginBottom="@dimen/recipe_button_margin_bottom"
            android:layout_width="@dimen/recipe_list_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/recipe_type_new_button"
            android:onClick="onAddNewLiquidButtonClicked"
            android:text="@string/recipe_add_new_button" />

        <ListView
            android:id="@+id/recipe_liquids_list"
            android:layout_width="@dimen/recipe_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_liquid_new_button"
            android:layout_toLeftOf="@id/recipe_types_list" />
        
    </RelativeLayout>
</LinearLayout>
